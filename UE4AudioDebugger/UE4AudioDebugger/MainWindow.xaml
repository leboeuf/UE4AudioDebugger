<Window x:Class="UE4AudioDebugger.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="MainWindow">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="75*"/>
            <ColumnDefinition Width="25*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="7*"/>
            <RowDefinition Height="3*"/>
        </Grid.RowDefinitions>

        <Border Background="Silver" Grid.Row="0" Grid.Column="0">
            <Canvas Name="canvas"/>
        </Border>

        <Border Background="LightSlateGray" Grid.Row="0" Grid.Column="1" Grid.RowSpan="2"></Border>

        <Border Background="SlateGray" Grid.Row="1" Grid.Column="0"></Border>
    </Grid>
</Window>
